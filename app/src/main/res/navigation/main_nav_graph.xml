<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/listFragment">

    <fragment
        android:id="@+id/listFragment"
        android:name="com.lahsuak.apps.mylist.ui.fragments.ListFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_list" >
        <action
            android:id="@+id/action_listFragment_to_addUpdateFragment"
            app:destination="@id/addUpdateFragment" />
        <action
            android:id="@+id/action_listFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
        <action
            android:id="@+id/action_listFragment_to_renameFragmentDialog"
            app:destination="@id/renameFragmentDialog" >
            <argument
                android:name="subTaskId"
                android:defaultValue="-1" />
        </action>
    </fragment>
    <fragment
        android:id="@+id/addUpdateFragment"
        android:name="com.lahsuak.apps.mylist.ui.fragments.AddUpdateFragment"
        android:label="{task_title}"
        tools:layout="@layout/fragment_add_update" >
        <argument
            android:name="id"
            app:argType="integer"/>
        <argument
            android:name="task_title"
            app:argType="string" />
        <deepLink
            android:id="@+id/deepLink"
            app:uri="www.navigationcomponent.com/{id}" />
        <action
            android:id="@+id/action_addUpdateFragment_to_renameFragmentDialog"
            app:destination="@id/renameFragmentDialog" />

    </fragment>
    <dialog
        android:id="@+id/deleteAllCompletedDialogFragment"
        android:name="com.lahsuak.apps.mylist.ui.fragments.DeleteAllCompletedDialogFragment"
        android:label="DeleteAllCompletedDialogFragment" />
    <action android:id="@+id/action_global_deleteAllCompletedDialogFragment" app:destination="@id/deleteAllCompletedDialogFragment" />
    <dialog
        android:id="@+id/deleteAllCompletedDialogFragment2"
        android:name="com.lahsuak.apps.mylist.ui.fragments.DeleteAllCompletedDialogFragment2"
        android:label="DeleteAllCompletedDialogFragment2" />
    <action android:id="@+id/action_global_deleteAllCompletedDialogFragment2" app:destination="@id/deleteAllCompletedDialogFragment2" />
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.lahsuak.apps.mylist.ui.fragments.SettingsFragment"
        android:label="Settings" />
    <dialog
        android:id="@+id/renameFragmentDialog"
        android:name="com.lahsuak.apps.mylist.ui.fragments.RenameFragmentDialog"
        android:label="RenameFragmentDialog"
        tools:layout="@layout/fragment_dialog_rename">
        <argument android:name="source"
            app:argType="boolean"/>
        <argument
            android:name="task_id"
            app:argType="integer"
            />
        <argument
            android:name="tak_title"
            app:argType="string"
            app:nullable="true"
            />
        <argument android:name="subTaskId"
            app:argType="integer"
            />
        <deepLink
            android:id="@+id/deepLink"
            app:uri="myapp://kmv.com/rename" />
    </dialog>
    <dialog
        android:id="@+id/shortcutFragmentDialog"
        android:name="com.lahsuak.apps.mylist.ui.fragments.ShortcutFragmentDialog"
        android:label="ShortcutFragmentDialog"
        tools:layout="@layout/fragment_dialog_rename"
        >
        <argument
            android:name="task_id"
            app:argType="integer"
            android:defaultValue="-1"
            />
        <argument
            android:name="tak_title"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="null"
            />
        <deepLink
            android:id="@+id/deepLink"
            app:uri="myapp://kmv.com/shortcut" />
    </dialog>
    <action android:id="@+id/action_global_shortcutFragmentDialog" app:destination="@id/shortcutFragmentDialog" />
</navigation>